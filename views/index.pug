extends layout.pug

block head
  script(type="application/javascript").
    function copyLink() {
      var e = document.getElementById("link");
      e.select();
      e.setSelectionRange(0, 99999);
      navigator.clipboard.writeText(e.value);
    }

block content
  section.hero.is-info
    .hero-body
      h1.title CoinFlippin'!
      p.subtitle Your trusted Coin Flips as a Service (CFaaS) solution

  section.section
    form(action="/flip", method="post")
      .field
        label.label(for="headsName") Label for "heads"
        .control
          input#headsName.input.is-large(
            type="text",
            required,
            name="headsName",
            value=headsName
          )
      .field
        label.label(for="tailsName") Label for "tails"
        .control
          input#tailsName.input.is-large(
            type="text",
            required,
            name="tailsName",
            value=tailsName
          )
      .field
        .control
          button.button(type="submit") Generate link
